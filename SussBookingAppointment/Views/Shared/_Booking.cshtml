@model UserRegistration
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="form-group col-md-4">
        <label asp-for="PrefMobileNo" class="control-label"></label>
        <input asp-for="PrefMobileNo" class="form-control" required disabled readonly="readonly" />
        <span asp-validation-for="PrefMobileNo" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="PrefEmailAddress" class="control-label"></label>
        <input asp-for="PrefEmailAddress" class="form-control" required disabled readonly="readonly" />
        <span asp-validation-for="PrefEmailAddress" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="JobStatus" class="control-label"></label>
        <select asp-for="JobStatus" class="form-control" required disabled readonly="readonly">
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="JobStatus" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="form-group col-md-12">
        <label asp-for="CompanyWorking" class="control-label"></label>
        <input asp-for="CompanyWorking" class="form-control" required disabled readonly="readonly" />
        <span asp-validation-for="CompanyWorking" class="text-danger"></span>
    </div>
</div>
<div class="row">

    <div class="form-group col-md-6">
        <label asp-for="EmergencyContactPerson" class="control-label"></label>
        <input asp-for="EmergencyContactPerson" class="form-control" required disabled readonly="readonly" />
        <span asp-validation-for="EmergencyContactPerson" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="RelationwithClint" class="control-label"></label>
        <input asp-for="RelationwithClint" class="form-control" required disabled readonly="readonly" />
        <span asp-validation-for="RelationwithClint" class="text-danger"></span>
    </div>
</div>
<div class="row">

    <div class="form-group col-md-12">
        <label asp-for="EmergencyContactNo" class="control-label"></label>
        <input asp-for="EmergencyContactNo" class="form-control" required disabled readonly="readonly" />
        <span asp-validation-for="EmergencyContactNo" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="form-group col-md-12">
        <label asp-for="EmergencyContactEmailID" class="control-label"></label>
        <input asp-for="EmergencyContactEmailID" class="form-control" required disabled readonly="readonly" />
        <span asp-validation-for="EmergencyContactEmailID" class="text-danger"></span>
    </div>
</div>